{
    "name"       : "mandober/fu",
    "description": "Probing PHP for FP",
    "keywords"   : ["functional php", "functional programming"],
    "homepage"   : "http://github.com/mandober/functional-php",
    "license"    : "MIT",
    "authors"    : [
        {
            "name" : "Ivan Ilic",
            "email": "mandober@gmail.com"
        }
    ],
    "minimum-stability" : "stable",
    "require"           : {
        "php": ">=7.4.0"
    },
    "autoload" : {
        "psr-4": {
            "mandober\\fu\\": "src/"
        },
        "files":
            [ "src/arity.php"
            , "src/closurize.php"
            , "src/compose.php"
            , "src/curry.php"
            , "src/dump.php"
            , "src/finkel.php"
            , "src/foldl.php"
        ]
    },
    "scripts"    : {
        "serve"  : "php -S localhost:8080 -t examples/",
        "test"   : "phpunit",
        "testdox": "phpunit --testdox"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4"
    }
}
